<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:padding="5dp"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center">

		<EditText
			android:id="@+id/set_date"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="30sp"
			android:inputType="date"
			android:selectAllOnFocus="true"/>

		<TextView
			android:id="@+id/month_year"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="30sp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="2dp">

		<Spinner
			android:id="@+id/set_sort"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"/>

		<Spinner
			android:id="@+id/set_vol"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="2"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="5dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:text="@string/counter1"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:labelFor="@+id/add_counter1"/>

		<EditText
			android:id="@+id/add_counter1"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:inputType="number"
			android:textSize="35sp"
			android:gravity="end"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="5dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:text="@string/counter2"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:labelFor="@+id/add_counter2"/>

		<EditText
			android:id="@+id/add_counter2"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:inputType="number"
			android:textSize="35sp"
			android:gravity="end"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="5dp">

		<Button
			android:id="@+id/add_cancel"
			android:layout_height="50dp"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:text="@string/cancel"
			android:layout_gravity="bottom"
			android:onClick="onClick"/>

		<Button
			android:id="@+id/add_ok"
			android:layout_height="50dp"
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:text="@string/add"
			android:layout_gravity="bottom"
			android:onClick="onClick"/>

	</LinearLayout>

</LinearLayout>

