<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="116dp">

    <ImageView
        android:id="@+id/ic_main"
        android:layout_width="60dp"
        android:layout_height="82dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        tools:background="@color/div_color"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_main_sort"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        tools:text="Мелодии лета 0.5" />

    <TextView
        android:id="@+id/text_main_counter1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rect_gradient"
        android:gravity="end"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingEnd="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:textSize="30sp"
        tools:text="3456" />

    <TextView
        android:id="@+id/text_main_counter2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_main_counter1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rect_gradient"
        android:gravity="end"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingEnd="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:textSize="30sp"
        tools:text="3456" />

    <TextView
        android:id="@+id/text_main_stamps1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_main_sort"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ic_main"
        android:layout_toRightOf="@+id/ic_main"
        tools:text="Ю090 006699333" />

    <TextView
        android:id="@+id/text_main_stamps2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_main_stamps1"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ic_main"
        android:layout_toRightOf="@+id/ic_main"
        tools:text="Ю090 006699333" />

</RelativeLayout>

